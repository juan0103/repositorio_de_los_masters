<p id="notice"><%= notice %></p>
<section class="content-header">
  <h1><b>Tipo De Novedades</b></h1>    
</section>   
<div class="box">
  <div class="box-body">
    <table class="table table-bordered table-striped filterTable">
      <thead>
        <tr>
          <th>Id Novedad</th>
          <th>Descripcion Novedad</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tipo_de_novedades.each do |tipo_de_novedade| %>
          <tr>
            <td><%= tipo_de_novedade.id_tnovedad %></td>
            <td><%= tipo_de_novedade.desc_tnovedad %></td>
            <td>
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-search fa-lg"></i></span>
                <%= link_to 'Ver', tipo_de_novedade,  { class: "btn btn-primary btn-sm", id: "myid"}%>
              </div>
            </td>
            <td>
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-edit fa-lg"></i></span>
                <%= link_to 'Editar', edit_tipo_de_novedade_path(tipo_de_novedade), {class: "btn btn-success btn-sm"}%>
              </div>
            </td>
            <td>
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-trash-o fa-lg"></i></span>
                <%= link_to 'Eliminar', tipo_de_novedade,  method: :delete, data: { confirm: 'Esta seguro que quiere eliminar este registro?' } , class: "btn btn-danger btn-sm" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
<br>
<label class="fa fa-plus fa-lg" ></label><%= link_to 'Nuevo', new_tipo_de_novedade_path, class: "btn btn-warning" %>